<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewMx"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"


        android:contentDescription="TODO"
        android:scaleType="fitStart"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textMx"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/buttonShrek"
        app:layout_constraintVertical_bias="0.825"
        app:srcCompat="@drawable/ma"
        tools:srcCompat="@drawable/ma" />

    <TextView
        android:id="@+id/textMx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Матрица"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewMx" />

    <Button
        android:id="@+id/buttonMx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/details"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/buttonShrek"
        app:layout_constraintTop_toBottomOf="@id/textMx" />

    <TextView
        android:id="@+id/textShrek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="169dp"
        android:layout_marginBottom="168dp"
        android:text="@string/Шрек"

        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonShrek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonShrek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/details"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="204dp"
        app:layout_constraintTop_toBottomOf="@id/textShrek"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/textShrek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sh" />

    <Button
        android:id="@+id/buttonInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:text="Invite"

        app:layout_constraintStart_toStartOf="@id/buttonShrek"
        app:layout_constraintTop_toBottomOf="@id/buttonMx"/>

</androidx.constraintlayout.widget.ConstraintLayout>